<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/image_icon_document"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:src="@drawable/file" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/image_icon_document"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:maxLines="2"
                android:textColor="@color/brunette"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_time"
                    android:textColor="@color/newgrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                
                <View
                    android:visibility="invisible"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:id="@+id/divider"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/createdata"
                    android:layout_width="1dp"
                    android:background="@color/newgrey"
                    android:layout_height="10dp"/>


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"
            />

    </RelativeLayout>
    <View
        android:layout_below="@id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        />

</RelativeLayout>