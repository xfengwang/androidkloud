<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:orientation="vertical" >

    <include layout="@layout/page_description_top" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/imghead"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pi_avatar"
                style="@style/PersonInfoTextLabelStyle" />

            <RelativeLayout
                android:id="@+id/editimghead"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/right"
                    android:src="@drawable/arrow2" />

                <!--<com.kloudsync.techexcel.view.CircleImageView
                    android:id="@+id/edithead"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:contentDescription="@string/head"
                    android:src="@drawable/hello" />-->
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/edithead"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@string/head"
                    android:scaleType="center"
                    fresco:fadeDuration="500"
                    fresco:failureImage="@drawable/hello"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@drawable/hello"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:roundAsCircle="true" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            style="@style/PersonInfoLineStyle" />
        <RelativeLayout
            android:id="@+id/rl_pi_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/pc_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/as_info_name"
                style="@style/PersonInfoTextLabelStyle" />
            <TextView
                android:id="@+id/tv_pi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:text="name"
                style="@style/PersonInfoTextContentStyle"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow2" />
        </RelativeLayout>

        <TextView
            style="@style/PersonInfoLineStyle" />
        <RelativeLayout
            android:id="@+id/rl_pi_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/pc_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/UserName"
                style="@style/PersonInfoTextLabelStyle" />
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imageView5"
                style="@style/PersonInfoTextContentStyle"/>
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow2" />
        </RelativeLayout>
        <TextView
            style="@style/PersonInfoLineStyle" />
        <RelativeLayout
            android:id="@+id/rl_pi_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/pc_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/Main_Phone"
                style="@style/PersonInfoTextLabelStyle" />
            <TextView
                android:id="@+id/tv_phone_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imageView"
                android:text="nam"
                style="@style/PersonInfoTextContentStyle"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow2" />
        </RelativeLayout>
        <TextView
            style="@style/PersonInfoLineStyle" />
        <RelativeLayout
            android:id="@+id/rl_pi_secondary_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/pc_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/pi_sphone"
                style="@style/PersonInfoTextLabelStyle" />
            <TextView
                android:id="@+id/pi_tv_secondaryphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imageView4"
                android:text="18755545555"
                style="@style/PersonInfoTextContentStyle"/>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow2" />
        </RelativeLayout>

        <TextView
            style="@style/PersonInfoLineStyle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="@string/as_email"
                style="@style/PersonInfoTextLabelStyle" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <com.kloudsync.techexcel.tool.ContainsEmojiEditText
                    android:id="@+id/pi_tv_email"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/radio"
                    android:drawablePadding="5dp"
                    android:gravity="right|center"
                    android:paddingLeft="5dp"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:paddingRight="5dp"
                    style="@style/PersonInfoTextContentStyle"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editdescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:minHeight="150dp"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/pi_biography"
            style="@style/PersonInfoTextLabelStyle" />
        <EditText
            android:id="@+id/pi_et_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:hint="@string/pi_pbiography"
            android:background="@color/white"
            style="@style/PersonInfoTextContentStyle"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/pi_tv_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_btn"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/as_info_save"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <LinearLayout
        android:id="@+id/ll_sex_in"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="@string/sex"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sex_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/arrow2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_area_in"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical|left"
            android:text="@string/area"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_area_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/arrow2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_birthday_in"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="@string/birthday"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_birthday_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/arrow2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>