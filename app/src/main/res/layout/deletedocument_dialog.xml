<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
    android:background="@color/nocolor"
	android:orientation="horizontal">

	<TextView
		android:layout_width="0dp"
		android:layout_weight="0.1"
		android:layout_height="wrap_content" />
    <LinearLayout
	    android:layout_width="0dp"
        android:layout_height="wrap_content"
	    android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/pc_fillet"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
	        android:text="@string/delete_document"
            android:textColor="@color/pc_black_text"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:src="@drawable/warmsdeletedoc" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
	        android:text="@string/delete_document_tips_text"
            android:textColor="@color/pc_black_text"
            android:textSize="16dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
	        android:layout_marginLeft="@dimen/dp_25"
	        android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="30dp">


                <TextView
                    android:id="@+id/no"
	                android:layout_width="wrap_content"
	                android:paddingTop="@dimen/dp_15"
	                android:paddingBottom="@dimen/dp_15"
	                android:paddingLeft="@dimen/dp_20"
	                android:paddingRight="@dimen/dp_20"
	                android:layout_height="wrap_content"
                    android:background="@drawable/inviteuserleft"
                    android:gravity="center"
	                android:text="@string/base_cancel"
                    android:textColor="@color/c1"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/yes"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingTop="@dimen/dp_15"
	                android:paddingBottom="@dimen/dp_15"
	                android:paddingLeft="@dimen/dp_20"
	                android:paddingRight="@dimen/dp_20"
	                android:layout_alignParentRight="true"
                    android:background="@drawable/inviteuserleft"
                    android:gravity="center"
	                android:text="@string/base_enter"
                    android:textColor="@color/c1"
                    android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>

	<TextView
		android:layout_width="0dp"
		android:layout_weight="0.1"
		android:layout_height="wrap_content" />

</LinearLayout>