<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_follow_speaker"
    android:layout_width="@dimen/_speaker_big_width"
    android:layout_height="@dimen/speaker_big"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:background="@drawable/bg_user_border">

        <FrameLayout
            android:id="@+id/speaker_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_user_border"
            android:padding="2dp"></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_user_bottom_info"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_audio_status"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:src="@drawable/microphone" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12dp" />


        </LinearLayout>

        <com.kloudsync.techexcel.view.CircleImageView
            android:id="@+id/member_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="6dp"
            android:padding="2dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_mode"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:src="@drawable/user_info_expanded"
        />


</RelativeLayout>
