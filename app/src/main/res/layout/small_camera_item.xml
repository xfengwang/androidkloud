<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/speaker_normal_width"
    android:layout_height="@dimen/speaker_normal"
    android:padding="1dp"
    android:background="@drawable/shape_transparent"
    android:id="@+id/select_peple_container"
    >

    <LinearLayout
        android:layout_width="@dimen/speaker_normal_width"
        android:layout_height="@dimen/speaker_normal"
        android:padding="1dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:background="@drawable/bg_user_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:padding="2dp"
                android:id="@+id/video_view_container"
                android:layout_width="@dimen/speaker_normal_width"
                android:layout_height="@dimen/speaker_normal"
                android:background="@drawable/bg_user_border"></FrameLayout>

            <LinearLayout
                android:background="@drawable/bg_user_bottom_info"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/speaker_normal_width"
                android:layout_height="23dp">

                <ImageView
                    android:id="@+id/image_audio_status"
                    android:src="@drawable/microphone"
                    android:layout_width="18dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_name"
                    android:ellipsize="end"
                    android:textSize="8dp"
                    android:layout_marginLeft="3dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:text=""
                    android:layout_width="38dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <com.kloudsync.techexcel.view.CircleImageView
                android:id="@+id/member_icon"
                android:layout_marginBottom="6dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/icon_select_people"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="12dp"
        android:layout_height="12dp" />

    <ImageView
        android:id="@+id/icon_select_coach"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="14dp"
        android:layout_height="14dp" />

    <ImageView
        android:id="@+id/icon_coach_student"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="14dp"
        android:layout_height="14dp" />

    <ImageView
        android:id="@+id/icon_coach_audience"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="14dp"
        android:layout_height="14dp" />

    <ImageView
        android:id="@+id/icon_coach_audience_to_be_confirmed"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="14dp"
        android:layout_height="14dp" />


    <ImageView
        android:id="@+id/image_vedio_status"
        android:layout_width="15dp"
        android:visibility="gone"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:src="@drawable/icon_command_webcam_disable" />

</RelativeLayout>

