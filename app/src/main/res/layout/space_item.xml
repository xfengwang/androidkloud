<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_9"
    android:paddingBottom="@dimen/dp_9"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/spacerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:paddingTop="1dp"
            android:textSize="9sp"
            android:id="@+id/tv_sort"
            android:layout_width="22dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_space"
            android:gravity="center"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_toRightOf="@id/tv_sort"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:maxEms="15"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorFont33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Sample space1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/countrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/attachmentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textColor="#999999"
                android:textSize="11sp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/selectimage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/check"
            android:visibility="gone" />



    </RelativeLayout>


</LinearLayout>
