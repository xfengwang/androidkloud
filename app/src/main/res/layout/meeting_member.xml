<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:background="@color/white"
    android:paddingTop="14dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <com.kloudsync.techexcel.view.CircleImageView
                android:id="@+id/member_icon"
                android:padding="2dp"
                android:layout_width="42dp"
                android:src="@drawable/hello"
                android:layout_height="42dp"
                />

        <TextView

            android:layout_marginLeft="10dp"
            android:id="@+id/name"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/member_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_type"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text=""
            android:layout_toRightOf="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_host"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:visibility="gone"
            android:background="@drawable/starter_bg"
            android:textColor="#3D78FB"
            android:layout_toRightOf="@id/txt_type"
            android:text="@string/Starter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_toRightOf="@id/txt_host"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_presenter"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/starter_bg"
            android:textColor="#3D78FB"
            android:text="@string/presenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <RelativeLayout
            android:layout_marginRight="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <RelativeLayout
              android:id="@+id/ddd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_micro"
                android:padding="2dp"
                android:src="@drawable/member_micro_on"
                android:layout_width="18dp"
                android:layout_height="22dp" />
            <ImageView
                android:id="@+id/image_video"
                android:visibility="gone"
               android:layout_marginLeft="5dp"
                android:src="@drawable/icon_command_webcam_enable"
                android:layout_width="18dp"
                android:layout_height="22dp" />
              </LinearLayout>



            <ImageView
                android:id="@+id/image_coach"
                android:visibility="gone"
                android:src="@drawable/icon_private_coach"
                android:layout_width="25dp"
                android:layout_height="25dp" />


            <ImageView
                android:id="@+id/ishowhandsup"
                android:visibility="invisible"
                android:src="@drawable/wxf_handup"
                android:layout_width="18dp"
                android:layout_height="22dp"
                />
          </RelativeLayout>


            <ImageView
                android:layout_toRightOf="@id/ddd"
                android:id="@+id/image_setting"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/member_more"
                android:layout_width="18dp"
                android:layout_height="22dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="16dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:background="@drawable/change_auditor_bg"
                android:id="@+id/txt_change_to_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成为参会者"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />

            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@id/txt_change_to_member"
                android:background="@drawable/change_auditor_bg"
                android:id="@+id/txt_hands_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举手"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />





            <TextView
                android:layout_toRightOf="@id/txt_hands_up"
                android:layout_marginLeft="6dp"
                android:visibility="gone"
                android:background="@drawable/change_auditor_bg"
                android:id="@+id/txt_kick_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="踢出会议"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />

        </RelativeLayout>


    </RelativeLayout>



</LinearLayout>
