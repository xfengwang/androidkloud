<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/speaker_big_width"
    android:layout_height="@dimen/speaker_big"
    android:padding="1dp"
    android:background="@drawable/shape_transparent"
    android:id="@+id/select_peple_container"
    >

    <LinearLayout
        android:layout_width="@dimen/speaker_big_width"
        android:layout_height="@dimen/speaker_big"
        android:padding="1dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:background="@drawable/bg_user_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:padding="2dp"
                android:id="@+id/video_view_container"
                android:layout_width="@dimen/speaker_big_width"
                android:layout_height="@dimen/speaker_big"
                android:background="@drawable/bg_user_border"></FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_user_bottom_info"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_audio_status"
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:src="@drawable/microphone" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12dp" />


            </LinearLayout>

            <com.kloudsync.techexcel.view.CircleImageView
                android:id="@+id/member_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="6dp"
                android:padding="2dp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/icon_select_people"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="12dp"
        android:layout_height="12dp" />

    <ImageView
        android:id="@+id/icon_select_coach"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="18dp"
        android:layout_height="18dp" />

    <ImageView
        android:id="@+id/icon_coach_student"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="18dp"
        android:layout_height="18dp" />

    <ImageView
        android:id="@+id/icon_coach_audience"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="18dp"
        android:layout_height="18dp" />

    <ImageView
        android:id="@+id/icon_coach_audience_to_be_confirmed"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/shape_transparent"
        android:layout_width="18dp"
        android:layout_height="18dp" />

</RelativeLayout>

