<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/ss"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/inviteuserleft"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/lin_search"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/radio"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="10dp"
                    android:background="@drawable/searchicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Search_Contact"
                    android:textColor="@color/newgrey"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/adddocument"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/syncdocumentadd" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ss2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ss"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/upcoming"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/upcoming"
                android:textColor="@color/skyblue" />
        </RelativeLayout>


        <TextView
            android:layout_width="1dp"
            android:background="@color/divider_line"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/finished"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/pastfinish"
                android:textColor="@color/c5" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ss3"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_below="@id/ss2"
        android:visibility="visible">

        <TextView
            android:id="@+id/inprogressunderline"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@color/skyblue" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_below="@id/ss3"></android.support.v4.view.ViewPager>


</RelativeLayout>



