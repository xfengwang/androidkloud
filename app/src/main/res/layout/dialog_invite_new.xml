<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/invite_new"
        android:textColor="#9B9B9B"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/layout_invite_from_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_invite_from_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Invite from contact"
            android:textColor="@color/txt_color1"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_invite_from_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_invite_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/invite_new"
            android:textColor="@color/txt_color1"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/grey" />

    </LinearLayout>


</LinearLayout>