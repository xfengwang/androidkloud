<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_welcome"
        android:scaleType="fitXY"
        android:src="@drawable/logokloud"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_width="150dp"
        android:layout_height="30dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/peertimeselect_bg3"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/logintv"
            android:layout_width="wrap_content"
            android:text="@string/Login"
            android:textColor="@color/skyblue"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="1dp"
           android:background="@color/skyblue"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/registertv"
            android:layout_width="wrap_content"
            android:text="@string/Register"
            android:textColor="@color/skyblue"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/joincompanyTv"
        android:layout_width="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/startkloudbg"
        android:layout_height="125dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/image"
            android:src="@drawable/startkloudcompany"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="@string/join_start_company"
            android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:src="@drawable/startkloudbianbg"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/joinmeeting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/peertimeselect_bg2"
        android:layout_alignParentBottom="true"
        android:text="@string/join_meeting"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/join_meeting"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/peertimeselect_bg3"
        android:layout_alignParentBottom="true"
        android:text="@string/join_meeting"
        android:textColor="@color/white"
        android:layout_marginBottom="130dp">

        <EditText
            android:id="@+id/meetingidedit"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:hint="@string/input_startkloud_meeing_id"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_height="36dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/nextstep"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="27dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/join_meeting"
        android:textColor="@color/white"
        android:layout_marginBottom="123dp"
        android:src="@drawable/startkloudjoinmeeting" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/privacy_statement"
            android:textColor="@color/skyblue"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:text="@string/and"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/skyblue"
            android:textSize="12sp"
            android:text="@string/useteamandservice"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>