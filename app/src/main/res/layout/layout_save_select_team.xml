<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<RelativeLayout
		android:paddingTop="@dimen/dp_10"
		android:paddingRight="@dimen/dp_19"
		android:paddingBottom="@dimen/dp_10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/txt_promp"
			android:background="@drawable/shape_blue_3c77fb_all_radius_5"
			android:gravity="center"
			android:layout_marginLeft="@dimen/dp_20"
			android:elevation="@dimen/dp_5"
			android:textColor="@color/white"
			android:textSize="@dimen/sp_16"
			android:paddingLeft="@dimen/dp_5"
			android:paddingRight="@dimen/dp_5"
			android:text="T"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true" />

		<TextView
			android:layout_toRightOf="@id/txt_promp"
			android:layout_marginLeft="@dimen/dp_7"
			android:gravity="center"
			android:textColor="@color/blue1"
			android:textSize="@dimen/sp_16"
			android:text="@string/selectteam"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true" />

		<ImageView
			android:layout_marginRight="10dp"
			android:id="@+id/img_close"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:padding="12dp"
			android:layout_alignParentRight="true"
			android:src="@drawable/close" />
	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1.5px"
		android:background="@color/colorDividerD8DCE6" />


	<android.support.v7.widget.RecyclerView
		android:id="@+id/list_team"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>



