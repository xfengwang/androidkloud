<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<com.kloudsync.techexcel.view.DaoYuanView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="center"
        android:layout_gravity="center"
        android:src="@drawable/cover1"
        fresco:Round_coner="10dp"
        fresco:Round_color="@color/detail_top"
        fresco:left_top="true"
        fresco:right_bottom="true"
        />-->


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="center"
        android:layout_gravity="center"
        fresco:progressBarAutoRotateInterval="2000"
        fresco:progressBarImage="@drawable/waiting"
        fresco:progressBarImageScaleType="centerInside"
        fresco:fadeDuration="500"
        fresco:failureImage="@drawable/cover1"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/cover1"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:retryImage="@drawable/cover1"
        fresco:retryImageScaleType="centerInside"
        fresco:roundedCornerRadius="10dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="false"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="true"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_head"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:scaleType="center"
        fresco:fadeDuration="500"
        fresco:failureImage="@drawable/hello"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/hello"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/lin_sync"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/teamusic"/>
        <TextView
            android:id="@+id/tv_synccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="10sp"/>

    </LinearLayout>

</RelativeLayout>