<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_space_item"
    android:layout_height="wrap_content">


        <LinearLayout
            android:background="@drawable/space_bg"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/spacerelativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:paddingTop="1dp"
                android:textSize="9sp"
                android:text="S"
                android:id="@+id/tv_sort"
                android:layout_width="22dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_dir"
                android:gravity="center"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_marginLeft="15dp"

                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/tv_sort"
                    android:text="Sample space1"
                    android:textColor="@color/black" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/attachmentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_sort"
                    android:text=""
                    android:textColor="@color/newgrey" />
            </LinearLayout>

            <ImageView
                android:padding="2dp"
                android:layout_marginRight="22dp"
                android:visibility="invisible"
                android:id="@+id/image_sel"
                android:src="@drawable/check"
                android:layout_width="20dp"
                android:layout_height="20dp" />


        </LinearLayout>

</LinearLayout>
