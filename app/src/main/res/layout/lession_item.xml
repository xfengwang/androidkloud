<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kloudsync.techexcel.ui.MaskViewGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:containerCornerRadius="16dp"
            app:containerDeltaLength="10dp"
            app:containerShadowColor="#3327347d"
            app:containerShadowRadius="6dp"
            app:deltaX="0dp"
            app:deltaY="3dp"
            app:enable="true">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="110dp"
                android:background="@drawable/meeting_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JUN"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/time_divider" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="#ff333333"
                    android:textSize="36sp" />

            </LinearLayout>

        </com.kloudsync.techexcel.ui.MaskViewGroup>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="12333"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/moreoperation"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:src="@drawable/more_favor" />


            </RelativeLayout>

            <LinearLayout
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/teacher"
                    android:textColor="#999999"
                    android:textSize="13sp" />
                <HorizontalScrollView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#666666"
                        android:textSize="13sp" />
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="@string/time_1"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_label"
                        android:layout_marginTop="2dp"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:text="@string/student_1"
                        android:textColor="#a2a2a2"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/attendee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a2a2"
                        android:textSize="12sp" />
                </LinearLayout>

            </HorizontalScrollView>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/colorBGf7" />

        <ListView
            android:id="@+id/list_lession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/colorBGf7"
            android:divider="@null"
            android:scrollbars="none"
            android:visibility="gone"></ListView>
    </LinearLayout>


</LinearLayout>