<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="3dp"
            android:id="@+id/image_switch_company"
            android:src="@drawable/icon_switch_company"
            android:layout_width="23dp"
            android:layout_height="23dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/syncroom"
            android:textColor="@color/brunette"
            android:textSize="15sp"
            />

        <LinearLayout
            android:id="@+id/search_layout"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingLeft="13dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/seach_bg_v2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="36dp">

            <ImageView
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/searchicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Search_Contact"
                android:textColor="@color/newgrey"
                android:textSize="13sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_add"
            android:layout_marginLeft="20dp"
            android:layout_width="36dp"
            android:layout_height="36dp">
            <ImageView
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:id="@+id/addService"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/top_add_sync" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_marginTop="12dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="@string/Team"
            android:textColor="@color/brunette" />


    </RelativeLayout>


    <com.kloudsync.techexcel.ui.MaskViewGroup
        app:containerCornerRadius="16dp"
        app:containerDeltaLength="10dp"
        app:containerShadowColor="#B9C0E4"
        app:containerShadowRadius="6dp"
        app:deltaX="0dp"
        app:deltaY="3dp"
        app:enable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/team_bg"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/teamrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:paddingTop="5dp"
                android:id="@+id/switchteam"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/icon_project" />

            <ImageView
                android:id="@+id/icon_white_switch"
                android:src="@drawable/switch_white"
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/switchteam"
                android:layout_width="22dp"
                android:layout_height="22dp" />


            <TextView
                android:layout_marginRight="36dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:paddingBottom="1dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/teamspacename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon_white_switch"
                android:text=""
                android:textColor="@color/white" />

            <ImageView
                android:layout_marginRight="8dp"
                android:id="@+id/moreOpation"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_white" />

        </RelativeLayout>

    </com.kloudsync.techexcel.ui.MaskViewGroup>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp" />


            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:text="@string/Space"
                    android:textColor="@color/brunette" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginRight="22dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_create_new_dir"
                    android:id="@+id/createnewspace"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image_filter_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Create_Space"
                        android:textColor="#ff3d78fa"
                        android:textSize="11sp"
                        />

                </RelativeLayout>



                <ImageView

                    android:id="@+id/image_filter_space"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_filter" />
            </RelativeLayout>





            <android.support.v7.widget.RecyclerView
                android:id="@+id/spacerecycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/currentsyncroomtv"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="@string/currentsyncroom"
                android:textColor="@color/brunette" />



            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>