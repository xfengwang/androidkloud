<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/headll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_4"
    android:background="@drawable/selector_blue_white_all_radius_5"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_6"
    android:paddingTop="@dimen/dp_5"
    android:paddingRight="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_5">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/studenticon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            fresco:fadeDuration="500"
            fresco:failureImage="@drawable/placeholderimg"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/placeholderimg"
            fresco:placeholderImageScaleType="fitCenter"

            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/studentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorFont33"
            android:textSize="@dimen/sp_9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentname"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:src="@drawable/doc_list_user_icon" />

                <TextView
                    android:id="@+id/tv_item_create_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="用户名"
                    android:textColor="@color/colorFont99"
                    android:textSize="@dimen/sp_8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_item_doc_yin_xiang_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"
                    android:src="@drawable/doc_list_yin_xiang_icon" />

                <TextView
                    android:id="@+id/tv_item_yin_xiang_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="110"
                    android:textColor="@color/color3d78fb"
                    android:textSize="@dimen/sp_8" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_item_doc_more"
                    android:layout_width="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/doc_list_more_icon" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
