<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/selector_blue_white_all_radius_5"
    android:orientation="vertical"
    android:id="@+id/lly_item_select_space"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/icon"
            android:textSize="@dimen/sp_12"
            android:text="S"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="@drawable/selector_ovar_blue_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_item_space_arrow_icon"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/icon"
            android:orientation="vertical">

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/txt_space_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color191836"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/spacecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spaces"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_space_arrow_icon"
            android:layout_width="@dimen/dp_12"
            android:src="@drawable/arrow2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dp_12" />
        <!--<ImageView
            android:id="@+id/image_selected"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/check"
            android:visibility="gone" />-->


    </RelativeLayout>

    <!--<TextView

        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/divider_line" />-->
</LinearLayout>