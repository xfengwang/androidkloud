<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGf9">

    <include layout="@layout/titlebar" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_switch_pen"
        app:layout_constraintBottom_toTopOf="@+id/lly_switch_pen_add"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        app:layout_constraintTop_toBottomOf="@id/csl_titlebar"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/lly_switch_pen_add"
        android:layout_width="match_parent"
        android:background="@drawable/shape_blue_all_radius_21"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_51"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:src="@drawable/white_add_icon"
            android:layout_height="@dimen/dp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_7"
            android:textSize="@dimen/sp_17"
            android:text="@string/add_new_electronic_pen"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>