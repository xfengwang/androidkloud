<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bottom_dialog_border"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/bottom_dialog_border"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:gravity="center"
                android:text="@string/space_filter"
                android:textColor="#999999"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff7f7f7" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_show_all"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="18dp"
                        android:text="@string/show_all_spaces"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_toRightOf="@id/txt_show_all"
                        android:id="@+id/img_choosen_all"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="28dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dui"
                        android:visibility="visible" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff7f7f7" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/txt_show_only_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="18dp"
                        android:text="@string/show_only_my_spaces"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageView

                        android:layout_centerVertical="true"
                        android:id="@+id/img_choosen_only"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_toRightOf="@id/txt_show_only_mine"
                        android:layout_marginRight="28dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dui"
                        android:visibility="visible" />
                </RelativeLayout>




            </LinearLayout>
        </LinearLayout>

        <TextView
            android:background="#e6ffffff"
            android:layout_marginTop="10dp"
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:text="@string/Cancel"
            android:textColor="#3C77FB" />
    </LinearLayout>






</LinearLayout>