<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_team_icon"
            android:textSize="18sp"
            android:text="T"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="@drawable/circle_expand" />

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_team_name"
                android:singleLine="true"
                android:textColor="@color/txt_color1"
                android:textSize="14sp"
                android:text="team aaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_spaces_count"
                android:singleLine="true"
                android:textColor="#9b9b9b"
                android:textSize="12sp"
                android:text="team aaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_sel"
            android:layout_marginRight="16dp"
            android:src="@drawable/check"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <View
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>