<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/csl_titlebar"
    android:layout_height="@dimen/dp_50">

    <ImageView
        android:id="@+id/iv_titlebar_back"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_icon" />

    <TextView
        android:id="@+id/tv_titlebar_back"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        android:textColor="@color/colorFont33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/colorFont33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_titlebar_setting"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_19"
        android:padding="@dimen/dp_4"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/setting_icon" />

    <TextView
        android:id="@+id/tv_titlebar_setting"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        android:textColor="@color/colorFont33"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>