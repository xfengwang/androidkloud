<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 选中状态下的颜色 -->
  	<item android:state_selected="true"   android:drawable="@color/skyblue" /> 
   	<!--获得焦点时的颜色--> 
  	<item android:state_focused="true" android:drawable="@color/skyblue"/>  
  	<!-- 触摸模式下单击时的颜色--> 
	<item android:state_pressed="true" android:drawable="@color/skyblue"/>  
  	    <!-- 默认状态下的颜色 -->
    <item android:drawable="@color/nocolor">
    </item>
    
</selector>
